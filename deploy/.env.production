# CrewLedger — Production Environment Configuration
# Copy to /opt/crewledger/.env and fill in ALL values

# Twilio (from https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+18442049387

# OpenAI (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama (disable if not installed on VPS)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# Database (absolute path in production)
DATABASE_PATH=/opt/crewledger/data/crewledger.db

# Image Storage (absolute path in production)
RECEIPT_STORAGE_PATH=/opt/crewledger/storage/receipts

# Email Reports — Weekly accountant summary
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
ACCOUNTANT_EMAIL=accountant@example.com

# Application — PRODUCTION settings
APP_HOST=0.0.0.0
APP_PORT=5000
APP_DEBUG=false
SECRET_KEY=GENERATE_WITH_python3_-c_"import secrets; print(secrets.token_hex(32))"
