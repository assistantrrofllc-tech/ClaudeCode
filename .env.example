# CrewLedger Environment Configuration
# Copy this file to .env and fill in your values

# Twilio
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# OpenAI (GPT-4o-mini Vision for receipt OCR)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama (local AI processing)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# Database
DATABASE_PATH=data/crewledger.db

# Image Storage
RECEIPT_STORAGE_PATH=storage/receipts

# Email Reports (for weekly accountant reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ACCOUNTANT_EMAIL=accountant@example.com

# Application
APP_HOST=0.0.0.0
APP_PORT=5000
APP_DEBUG=false
SECRET_KEY=change_this_to_a_random_secret_key
